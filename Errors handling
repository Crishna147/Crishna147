-----------------------------------------------------------------
creating errors with err:= error.New()
-------------------------------------------------------------------
package main

import (
	"errors"
	"fmt"
)

func main() {
	err := errors.New("barnacles")
	fmt.Println("Sammy says:", err)
}

-----------------------------------------------------------------------------
err:= fmt.Errorf()
----------------------------------------------------------------------------------
package main

import (
	"fmt"
	"time"
)

func main() {
	err := fmt.Errorf("error occurred at: %v", time.Now())
	fmt.Println("An error happened:", err)
}

